<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>

<% include ./partials/messages %>
<% cards.forEach(function(card) { %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 id="title-card" class="card-title" name="title"> <%= card.title %></h5>
      <h6 id="date-card>" class="card-subtitle mb-2 text-muted" name="date"><%= card.date %></h6>
      <p id="body-card" class="card-text" name="body"><%= card.body %></p>
      <a href="/delete/<%= card._id %>" class="card-link">delete</a>
      <a href="#" onclick="myClick('<%= card._id %>')" class="card-link">Edit</a>
    </div>
  </div>
<% }) %>

<form id="formEdit" action="/edit"  method="POST" >
  <div class="form-group">
    <label for="title">Title</label>
    <input
    type="text"
      id="title"
      name="title"
      class="form-control"
      placeholder="Enter Title"
      value=""
    />
  </div>
  <input
    type="hidden"
    id="idinput"
    name="idinput"
    class="form-control"
    placeholder="idinput"
    value=""
  />
  <div class="form-group">
    <label for="body">Content</label>
    <textarea 
      type="text"
      id="body"
      name="body"
      class="body"
      placeholder="Write a note"
      value=""></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">
    Save Update
  </button>
</form>

<form action="/dashboard" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input
      type="title"
      id="titlenew"
      name="title"
      class="form-control"
      placeholder="Enter Title"
      value="<%= typeof name != 'undefined' ? name : '' %>"
    />
  </div>

  <div class="form-group">
    <label for="body">Content</label>
    <textarea 
      type="body"
      id="bodynew"
      name="body"
      class="body"
      placeholder="Write a note"
      value="<%= typeof name != 'undefined' ? name : '' %>"></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">
    Save
  </button>
</form>

<a href="/users/logout" class="btn btn-secondary">Logout</a>